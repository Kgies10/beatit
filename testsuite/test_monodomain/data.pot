[mesh]
    # number of elements per side
    elX = 10
    elY = 4
    elZ = 2
    
    # For Adaptive Mesh Refinement (AMR)
    # if max_num_mesh_ref = 0 then we use no AMR
    max_num_mesh_ref = 0
    step = 25
    refine_fraction = 0.7
    coarsen_fraction = 0.3
    error_estimator = kelly  # kelly, laplacian
[../]


[monodomain]

    # Output Folder
    output_folder = Output

	# If we want to impose an initial conditions on the potential
	# we can use the parameter ic. For example
    # ic = 'x + y * t'
    
    # Monodomain Parameters
    # This can be made a function
    Dff = 1.3342
    Dss = 0.17606
    Dnn = 0.17606
    Chi = 1400.0

    # Ionic Model
    # For now: NashPanfilov or ORd
    ionic_model = NashPanfilov

    # fiber field
    fibers  = '1.0, 0.0, 0.0'
    sheets  = '0.0, 1.0, 0.0'
    xfibers = '0.0, 0.0, 1.0'

	# Applied Stimulus
    [./pacing]
        function = '10.0 * ( x<0.15 ) * ( y<0.15 ) * ( z<0.15 ) * ( t<2 )'
    [../]

	# Time Data
    [./time]
        dt = 0.02
        init_time = 0.0
        final_time = 80
        max_iter = 100000
        save_iter = 50
    [../]

	# Linear Solver options
    [./linear_solver]
        type = cg
        preconditioner = sor
    [../]

[../]


